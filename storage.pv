apiVersion: v1
kind: PersistentVolume
metadata:
  labels:
    type: local
  name: storage
spec:
  accessModes:
  - ReadWriteOnce
  capacity:
    storage: 32G
  claimRef:
    apiVersion: v1
    kind: PersistentVolumeClaim
    name: storage
    namespace: default
  hostPath:
    path: /YOUR/PATH
    type: ""
  persistentVolumeReclaimPolicy: Retain
  storageClassName: generic
  volumeMode: Filesystem
status:
  phase: Bound
