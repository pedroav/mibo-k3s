apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: storage
  namespace: default
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 32G
  storageClassName: generic
  volumeMode: Filesystem
  volumeName: storage
status:
  accessModes:
  - ReadWriteOnce
  capacity:
    storage: 32G
  phase: Bound
